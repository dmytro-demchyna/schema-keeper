#!/usr/bin/env php
<?php
/**
 * This file is part of the SchemaKeeper package.
 * (c) Dmytro Demchyna <dmitry.demchina@gmail.com>
 * For the full copyright and license information, please view the LICENSE file that was distributed with this source code.
 */

if (php_sapi_name() != 'cli') {
    throw new \RuntimeException('Please, run this script in CLI mode');
}

$autoloadVariants = [
    __DIR__ . '/../../../autoload.php',
    __DIR__ . '/../vendor/autoload.php',
];

$autoloadPath = null;

foreach ($autoloadVariants as $file) {
    if (file_exists($file)) {
        $autoloadPath = $file;

        break;
    }
}

if (!$autoloadPath) {
    fwrite(STDERR, "Composer's vendor/autoload.php not found");
    exit(1);
}

require_once $autoloadPath;

$options = getopt('c:d:', ['help']);

$entryPoint = new \SchemaKeeper\CLI\EntryPoint();
$result = $entryPoint->run($options, $argv);

fwrite($result->getOutputStream(), $result->getMessage());
exit($result->getStatus());